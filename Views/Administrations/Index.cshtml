@model IEnumerable<PIMS.Entities.Administration>

@{
    ViewBag.Title = "Index";
}

<h2>List Of Administrators</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="tftable">
    <tr>
        <th>
            @Html.DisplayName("Admin Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayName("Church Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdministratorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdminChurch.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AdministrationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AdministrationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AdministrationId })
        </td>
    </tr>
}

</table>
