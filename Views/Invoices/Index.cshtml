@model IEnumerable<PIMS.Entities.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>List of Invoices</h2>

<p>
    <u> @Html.ActionLink("Add New Invoice", "Create")</u>
</p>
<table class="tftable">
    <tr>
        <th>
            @Html.DisplayName("Church Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayName("Date Recieved")
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Church.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
           € @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateReceived)
        </td>
        <td>
            <u>
                @Html.ActionLink("View Invoice", "Edit", new { id = item.InvoiceId })
            </u>
        </td>
    </tr>
}

</table>
