                @Html.EditorFor(model => model.DateOfCeremony, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOfCeremony, "", new { @class = "text-danger" })
            </div>
        </div>


