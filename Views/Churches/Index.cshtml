@model IEnumerable<PIMS.Entities.Church>

@{
    ViewBag.Title = "List of Churches";
}

<h2>List Of Churches</h2>
<table class="tftable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parish)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parish)
        </td>
        <td>
            <u>
                @Html.ActionLink("Edit", "Edit", new { id = item.ChurchId })
            </u> |
            <u>
                @Html.ActionLink("Details", "Details", new { id = item.ChurchId })
            </u>
        </td>
    </tr>
}

</table>
