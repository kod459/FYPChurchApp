@model PIMS.Entities.Appointments

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details of Ceremony</h2>
    @Html.AntiForgeryToken()
    <table class="tftable">
        <tr>
            <th>
                @Html.DisplayName("Church Name")
            </th>
            <td>
                @Html.DisplayFor(model => model.Church.Name)
            </td>
         </tr>
        <tr>
            <th>
                @Html.DisplayName("Date Of Ceremony")
            </th>
            <td>
                @Html.DisplayFor(model => model.DateOfAppointment)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayName("Parish Administrator")
            </th>
            <td>
                @Html.DisplayFor(model => model.Admins.AdministratorName)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayName("Ceremony Description")
            </th>
            <td>
                @Html.DisplayFor(model => model.DetailsOfAppointment)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayName("Ceremony Fee")
            </th>
            <td>
                @Html.DisplayFor(model => model.Fee)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayName("Participating Volunteers")
            </th>
            <td>
                @{
                    foreach (var item in Model.Volunteers)
                    {
                        @:  @item.Name <br />
                }
                }
            </td>
        </tr>

            <td>
            </td>
            <td>
                    @Html.ActionLink("Update Appointment Details", "Edit", new { id = Model.AppointmentId })
            </td>
    </table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}